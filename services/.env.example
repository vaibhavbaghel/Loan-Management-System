# ========== Environment Configuration ==========
# Copy this file to .env and update values for your environment

# ========== General ==========
DEBUG=False

# ========== Database ==========
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
USER_DB_NAME=user_service_db
LOAN_DB_NAME=loan_service_db

# ========== JWT & Security ==========
JWT_SECRET_KEY=your-shared-jwt-secret-key-change-in-production
USER_SERVICE_SECRET_KEY=user-service-secret-key-change-in-production
LOAN_SERVICE_SECRET_KEY=loan-service-secret-key-change-in-production

# ========== Service URLs (used internally by docker-compose) ==========
USER_SERVICE_URL=http://user-service:8001/api/user
LOAN_SERVICE_URL=http://loan-service:8002/api/loan

# ========== CORS ==========
CORS_ALLOWED_ORIGINS=http://localhost:8000,http://localhost:3000

# ========== Event Bus (memory, rabbitmq, redis) ==========
EVENT_BUS_TYPE=memory

# ========== RabbitMQ (if using rabbitmq event bus) ==========
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_URL=amqp://guest:guest@rabbitmq:5672/
